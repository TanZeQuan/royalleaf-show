{
  "expo": {
    "name": "RoyalLeafApp",
    "slug": "royalleaf-premium",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "src/assets/icons/login-logo.png",
    "scheme": "royalleafapp",
    "userInterfaceStyle": "automatic",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them in your creative submissions.",
          "cameraPermission": "The app accesses your camera to let you take photos for your creative submissions."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "需要使用您的相机来扫描二维码"
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "需要使用您的相机来扫描二维码"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "需要访问您的相册以保存二维码图片",
          "savePhotosPermission": "需要保存二维码图片到您的相册",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-localization",
      "expo-notifications"
    ],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "src/assets/icons/login-logo.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.royalleaf.premium",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ]
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.royalleaf.premium",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "需要使用您的相机来拍照和扫描二维码",
        "NSPhotoLibraryUsageDescription": "需要访问您的相册以选择照片和扫描二维码",
        "NSPhotoLibraryAddUsageDescription": "需要保存二维码图片到您的相册"
      }
    },
    "extra": {
      "appDescription": "RoyalLeaf Premium 是专为奶茶爱好者设计的会员应用，提供会员积分、专属优惠及活动资讯。",
      "brandColor": "#4A5D23",
      "primaryFont": "Roboto-Regular",
      "eas": {
        "projectId": "ab06e770-a644-40b0-83fe-d6bd44fff208"
      }
    },
    "owner": "zequan"
  }
}
